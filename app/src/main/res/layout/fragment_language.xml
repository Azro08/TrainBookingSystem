<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.language.LanguageFragment">

    <ImageView
        android:id="@+id/action_back"
        android:layout_width="30dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_back"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/language"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/lightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_language" />


    <View
        android:id="@+id/lan_en"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_view_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <ImageView
        android:id="@+id/checked_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_check"
        app:layout_constraintBottom_toBottomOf="@id/lan_en"
        app:layout_constraintEnd_toEndOf="@+id/lan_en"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/lan_en" />

    <ImageView
        android:id="@+id/ic_en"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/flag_uk"
        app:layout_constraintBottom_toBottomOf="@id/lan_en"
        app:layout_constraintStart_toStartOf="@id/lan_en"
        app:layout_constraintTop_toTopOf="@id/lan_en" />

    <TextView
        android:id="@+id/text_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="English"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/lan_en"
        app:layout_constraintStart_toEndOf="@id/ic_en"
        app:layout_constraintTop_toTopOf="@id/lan_en" />


    <View
        android:id="@+id/lan_rus"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_view_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lan_en" />

    <ImageView
        android:id="@+id/checked_rus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/lan_rus"
        app:layout_constraintEnd_toEndOf="@+id/lan_rus"
        app:layout_constraintTop_toTopOf="@id/lan_rus" />

    <ImageView
        android:id="@+id/ic_rus"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/flag_rus"
        app:layout_constraintBottom_toBottomOf="@id/lan_rus"
        app:layout_constraintStart_toStartOf="@id/lan_rus"
        app:layout_constraintTop_toTopOf="@id/lan_rus" />

    <TextView
        android:id="@+id/text_rus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="Russian"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/lan_rus"
        app:layout_constraintStart_toEndOf="@id/ic_rus"
        app:layout_constraintTop_toTopOf="@id/lan_rus" />

</androidx.constraintlayout.widget.ConstraintLayout>